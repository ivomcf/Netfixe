<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonHome"
            android:text="Home" />

        <Button
            android:id="@+id/buttonSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonSettings"
            android:text="Settings" />

        <Button
            android:id="@+id/buttonMovies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonMovies"
            android:text="Movies" />

        <Button
            android:id="@+id/buttonSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonSeries"
            android:text="Series" />

        <Button
            android:id="@+id/buttonNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="buttonNews"
            android:text="@string/menu_news" />
    </LinearLayout>
</LinearLayout>